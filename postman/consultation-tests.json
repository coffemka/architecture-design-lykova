{
  "info": {
    "_postman_id": "simple-tests",
    "name": "Consultation API - Basic Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Slots",
      "item": [
        {
          "name": "[200] Создание слота",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Статус 200 OK\", function() {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Ответ содержит id слота\", function() {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response).to.have.property('id');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"teacherId\": \"teacher1\",\n    \"startTime\": \"2026-03-01T10:00:00Z\",\n    \"endTime\": \"2026-03-01T11:00:00Z\",\n    \"meetingType\": 0,\n    \"description\": \"Тестовый слот\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/slots",
              "host": ["{{baseUrl}}"],
              "path": ["api", "slots"]
            }
          }
        },
        {
          "name": "[200] Получение доступных слотов",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Статус 200 OK\", function() {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Ответ содержит массив slots\", function() {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response).to.have.property('slots');",
                  "    pm.expect(response.slots).to.be.an('array');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/slots/available",
              "host": ["{{baseUrl}}"],
              "path": ["api", "slots", "available"]
            }
          }
        },
        {
          "name": "[400] Слот с некорректным временем",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Статус 400 Bad Request\", function() {",
                  "    pm.response.to.have.status(400);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"teacherId\": \"teacher1\",\n    \"startTime\": \"2026-03-01T12:00:00Z\",\n    \"endTime\": \"2026-03-01T11:00:00Z\",\n    \"meetingType\": 0\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/slots",
              "host": ["{{baseUrl}}"],
              "path": ["api", "slots"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000"
    }
  ]
}