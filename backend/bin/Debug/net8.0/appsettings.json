{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  
  "CalendarIntegration": {
    "Provider": "Yandex",
    "ApiUrl": "https://calendar.yandex.ru/api",
    "TimeoutSeconds": 30
  },
  "TelegramBot": {
    "Token": "YOUR_BOT_TOKEN",
    "WebhookUrl": "https://yourdomain.com/api/telegram/webhook"
  },
  "NotificationSettings": {
    "ReminderHoursBefore": 24,
    "ConfirmationDeadlineHours": 48
  }
}
